<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.wallet.balance.BalanceFragment">

    <ImageView
        android:id="@+id/cover_background_image"
        android:layout_width="451dp"
        android:layout_height="238dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/mountain_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_background_circle"
        android:layout_width="150dp"
        android:layout_height="102dp"
        android:layout_marginTop="180dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/white_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="101dp"
        android:layout_height="85dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/bdwallet_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_background_circle" />

    <Button
        android:id="@+id/history_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/mediumBlue"
        android:text="@string/history_btn"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <WebView
        android:id="@+id/balance_graph"
        android:layout_width="317dp"
        android:layout_height="279dp"
        android:layout_marginBottom="28dp"

        android:contentDescription="@string/logo_desc"
        app:layout_constraintBottom_toBottomOf="@+id/history_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/horizontal_divider"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/dark_blue_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_crypto_label" />

    <ImageView
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/dark_blue_rectangle"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/balance_crypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textColor="@color/mediumBlue"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover_background_image" />

    <TextView
        android:id="@+id/balance_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider"
        app:layout_constraintTop_toBottomOf="@id/cover_background_image" />

    <TextView
        android:id="@+id/balance_crypto_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="@string/balance_btc_label"
        android:textColor="@color/mediumBlue"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_crypto" />

    <TextView
        android:id="@+id/balance_local_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="@string/balance_usd_label"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider"
        app:layout_constraintTop_toBottomOf="@+id/balance_local" />

    <TextView
        android:id="@+id/price_crypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_divider" />

    <TextView
        android:id="@+id/price_crypto_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/price_btc_label"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_crypto" />

    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/logo_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/android_dot_menu_white"
        app:layout_constraintEnd_toEndOf="@+id/cover_background_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar_crypto_balance"
        style="?android:attr/progressBarStyle"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover_background_image" />

    <ProgressBar
        android:id="@+id/progress_bar_local_balance"
        style="?android:attr/progressBarStyle"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover_background_image" />

    <ProgressBar
        android:id="@+id/progress_bar_price"
        style="?android:attr/progressBarStyle"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>