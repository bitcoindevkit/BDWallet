<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_balance">

    <fragment
        android:id="@+id/navigation_deposit"
        android:name="org.bdwallet.app.ui.wallet.deposit.DepositFragment"
        android:label="@string/title_deposit"
        tools:layout="@layout/fragment_deposit" />


    <fragment
        android:id="@+id/navigation_balance"
        android:name="org.bdwallet.app.ui.wallet.balance.BalanceFragment"
        android:label="@string/title_balance"
        tools:layout="@layout/fragment_balance" />


    <fragment
        android:id="@+id/navigation_withdraw"
        android:name="org.bdwallet.app.ui.wallet.withdraw.WithdrawFragment"
        android:label="@string/title_withdraw"
        tools:layout="@layout/fragment_withdraw" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="org.bdwallet.app.ui.wallet.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings"/>

</navigation>
