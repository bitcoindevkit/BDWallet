<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mediumBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorSecondary">@color/lightGray</item>
        <item name="colorSecondaryVariant">@color/darkGray</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mediumBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorSecondary">@color/lightGray</item>
        <item name="colorSecondaryVariant">@color/darkGray</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
